# ==============================================
# ENTERPRISE PDF CONVERTER - DEVELOPMENT ENV
# ==============================================
COMPOSE_PROJECT_NAME=pdf-converter
ENVIRONMENT=development

# ==============================================
# NETWORK CONFIGURATION
# ==============================================
SUBNET=172.20.0.0/16

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_DB=pdf_converter_db
POSTGRES_USER=pdf_admin
POSTGRES_PASSWORD=PdfSecure2024!
POSTGRES_HOST=postgres-db
POSTGRES_PORT=7432
POSTGRES_MAX_CONNECTIONS=100

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=redis-cache
REDIS_PORT=7379
REDIS_PASSWORD=RedisSecure2024!
REDIS_MAXMEMORY=1gb

# ==============================================
# RABBITMQ CONFIGURATION
# ==============================================
RABBITMQ_HOST=rabbitmq-queue
RABBITMQ_DEFAULT_USER=rabbit_admin
RABBITMQ_DEFAULT_PASS=RabbitSecure2024!
RABBITMQ_PORT=7672
RABBITMQ_MANAGEMENT_PORT=7673

# ==============================================
# MINIO (S3 COMPATIBLE) CONFIGURATION
# ==============================================
MINIO_HOST=minio-storage
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=MinioSecure2024!
MINIO_API_PORT=7900
MINIO_CONSOLE_PORT=7901
MINIO_BUCKET_NAME=pdf-converter-files

# ==============================================
# SERVICE PORTS
# ==============================================
NGINX_PORT=7000
NGINX_SSL_PORT=7443
API_GATEWAY_PORT=7001
AUTH_SERVICE_PORT=7002
FILE_SERVICE_PORT=7003
CONVERSION_ENGINE_PORT=7004
NOTIFICATION_SERVICE_PORT=7005

# ==============================================
# SECURITY & JWT
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
ENCRYPTION_KEY=your-32-character-encryption-key

# ==============================================
# MONITORING
# ==============================================
PROMETHEUS_PORT=7090
GRAFANA_PORT=7091
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=GrafanaSecure2024!

# ==============================================
# FILE PROCESSING
# ==============================================
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif,html,xml
CONVERSION_TIMEOUT=300s
CLEANUP_INTERVAL=24h
